<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kh.companyfood.ui.login.SignUpActivity"
    tools:showIn="@layout/activity_sign_up">


    <EditText
        android:id="@+id/editText_signup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editText_signup_pw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent" >
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/editText_signup_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/editText_signup_email"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText_signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/button_signup"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:text="SignUp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="87dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        tools:layout_editor_absoluteX="27dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_marginBottom="87dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/editText_signup_id"
        android:layout_marginRight="53dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pw"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintRight_toLeftOf="@+id/editText_signup_pw"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toTopOf="@+id/button_signup"
        app:layout_constraintRight_toLeftOf="@+id/editText_signup_email"
        android:layout_marginRight="33dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
